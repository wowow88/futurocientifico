<Layout>
  <section class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-purple-800 mb-6">Revistas cient√≠ficas</h1>
    <div id="contenedor-temas" class="space-y-10"></div>
  </section>

  <script type="module">
    async function cargarArticulos() {
      const res = await fetch('/articles.json');
      const data = await res.json();
      const revistas = data.filter(art => art.tipo === 'revista'); // Clasifica tipo si es necesario

      const agrupados = {};
      revistas.forEach(art => {
        const tema = art.tema || 'General';
        if (!agrupados[tema]) agrupados[tema] = [];
        agrupados[tema].push(art);
      });

      const contenedor = document.getElementById('contenedor-temas');
      for (const [tema, articulos] of Object.entries(agrupados)) {
        const bloque = document.createElement('div');
        bloque.innerHTML = `<h2 class="text-2xl font-semibold text-purple-600 mb-3">${tema}</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="grupo-${tema}"></div>`;
        
        const grupo = bloque.querySelector(`#grupo-${tema}`);
        articulos.forEach(art => {
          const card = document.createElement('div');
          card.className = 'bg-white rounded-xl shadow p-4 flex flex-col';
          card.innerHTML = `
            <h3 class="text-lg font-semibold text-purple-700 mb-1">${art.title_es || art.title}</h3>
            <p class="text-xs text-gray-600 mb-1">${art.source || 'Fuente desconocida'} - ${art.date}</p>
            <a href="${art.url}" target="_blank" class="mt-auto text-purple-600 hover:underline text-sm">Leer revista</a>
          `;
          grupo.appendChild(card);
        });

        contenedor.appendChild(bloque);
      }
    }

    cargarArticulos();
  </script>
</Layout>
