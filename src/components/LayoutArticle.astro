
---
import { format } from 'date-fns'
const { title, date, source, original_url, language } = Astro.props;
---

<article class="prose prose-invert mx-auto p-6">
  <header class="mb-4 border-b pb-2">
    <h1 class="text-3xl font-bold">{title}</h1>
    <div class="text-sm text-gray-400 flex items-center gap-4">
      <span>{format(new Date(date), 'PPP')}</span>
      <span class="px-2 py-1 bg-blue-800 text-white rounded text-xs">{source}</span>
      <span class="px-2 py-1 bg-gray-700 text-white rounded text-xs uppercase">{language}</span>
    </div>
    <a href={original_url} target="_blank" rel="noopener noreferrer" class="inline-block mt-2 text-blue-400 underline text-sm">
      Ver artículo original ↗
    </a>
  </header>
  <slot />
</article>
