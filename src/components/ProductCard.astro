---
const { title, description, price, url, image } = Astro.props;
---

<article class="bg-gradient-to-br from-blue-800 to-indigo-900 p-4 rounded-2xl shadow-xl text-white max-w-md mx-auto mb-6" aria-label={`Producto recomendado: ${title}`}>
  <h3 class="text-2xl font-bold mb-2">{title}</h3>

  {image && (
    <img src={image} alt={`Imagen de ${title}`} class="rounded-lg shadow-md mb-4 w-full object-contain max-h-64 mx-auto" loading="lazy" />
  )}

  <p class="text-sm mb-4">{description}</p>

  <div class="flex justify-between items-center">
    {price && <span class="text-lg font-semibold">{price}</span>}
    <a href={url} target="_blank" rel="noopener noreferrer" title={`Comprar ${title} en Amazon`} class="bg-yellow-400 hover:bg-yellow-300 text-black font-bold px-4 py-2 rounded-lg">
      Comprar â†—
    </a>
  </div>
</article>
